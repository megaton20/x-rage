  <!-- Custom Stylesheet -->
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Loader Styles */
    #loader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(255, 255, 255, 0.9); /* Light background */
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .loader-wrapper {
      position: relative; /* This will contain the circle and the logo */
      width: 150px; /* Adjust to desired size */
      height: 150px; /* Adjust to desired size */
    }

    .loader-logo {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%); /* Centers the logo inside the circle */
      width: 80px; /* Adjust size if needed */
      z-index: 2; /* Make sure logo is on top */
    }

    .loader-circle {
      position: absolute;
      transform: translate(-50%, -50%);
      border: 1px solid rgba(0, 0, 0, 0.1);
      border-top: 1px solid #bda20e; 
      border-radius: 50%;
      width: 150px; /* Same size as the wrapper */
      height: 150px; /* Same size as the wrapper */
      animation: spin 1s linear infinite;
      z-index: 1; /* Place the circle behind the logo */
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Hide page content initially */
    #page-content {
      visibility: hidden; /* Keep it hidden until the loader disappears */
    }
  </style>
</head>

<body>
  <!-- Loader -->
  <div id="loader">
    <div class="loader-wrapper">
      <div class="loader-circle"></div> <!-- Circle is outside the logo -->
      <img src="/img/logo.png" alt="Logo" class="loader-logo">
    </div>
  </div>

  <!-- Dynamic content -->
  <div id="page-content">
    <%- body %>
  </div>

  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
  </a>

  <!-- Link to Local Bootstrap JS -->
  <script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>

  <!-- AOS Library JS -->
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

  <!-- Custom Script -->
  <script src="/script.js"></script>

  <!-- Loader JavaScript -->
  <script>
    window.addEventListener("load", function() {
      const loader = document.getElementById("loader");
      const body = document.getElementById("page-content");

      loader.style.display = "none"; // Hide the loader
      body.style.visibility = "visible"; // Show the content
    });
  </script>

  <!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Owl Carousel CSS and JS -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
